<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/commentsrecycler" android:paddingBottom="50dp" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout android:gravity="center_vertical" android:background="@android:color/white" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <EditText android:textSize="14sp" android:textColor="#555555" android:id="@+id/comment" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Tap and type" android:layout_weight="1"/>
        <Button android:textColor="@android:color/white" android:orientation="vertical" android:id="@+id/btnSendComment" android:background="@color/colorPrimary" android:layout_width="72dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="2dp" android:text="SEND"/>
    </LinearLayout>
</RelativeLayout>
