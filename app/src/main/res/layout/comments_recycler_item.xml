<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/profilepicture" android:background="@drawable/profileavatar" android:layout_width="@dimen/userprofilepic" android:layout_height="@dimen/userprofilepic" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
            <TextView android:textColor="@color/colorPrimary" android:id="@+id/profileusername" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvComment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/profileusername"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/lin" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@android:color/darker_gray" android:layout_gravity="bottom" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="end" android:id="@+id/imgdelete" android:visibility="invisible" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/delete" android:layout_alignParentTop="true"/>
                <View android:background="#000000" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/imgdelete"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
