<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/snackbar_here" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbarStyle="outsideOverlay" android:id="@+id/ScrollView01" android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:minWidth="310dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TAP BELOW TO ADD AN IMAGE"/>
            <ImageView android:id="@+id/post_image" android:background="@drawable/add_image_placeholder" android:layout_width="match_parent" android:layout_height="200dp"/>
            <TextView android:gravity="center" android:id="@+id/tvttile" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TITLE"/>
            <EditText android:id="@+id/storytitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Title" android:layout_below="@+id/post_image" android:inputType="textMultiLine"/>
            <TextView android:gravity="center" android:id="@+id/tvpost" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="POST"/>
            <EditText android:id="@+id/storytext" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Type your post here" android:layout_below="@+id/storytitle" android:inputType="textMultiLine"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
